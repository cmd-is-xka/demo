
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
} 
.userinfo {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.background{
  width: 100%;
  height: 400rpx;  
  position:fixed; 
  background-size:100% 100%;
  background-repeat: no-repeat;
  z-index: -1;
  filter: blur(10rpx);
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 60rpx;
  border: 6rpx solid white;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

